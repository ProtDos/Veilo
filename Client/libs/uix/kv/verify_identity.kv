                        PLabel:
                            text: "0000"
                        PLabel:
                            text: "0000"

                    PBoxLayout:
                        orientation: "vertical"
                        spacing: 2
                        size_hint_y: .55

                        PLabel:
                            text: "0000"
                        PLabel:
                            text: "0000"
                        PLabel:
                            text: "0000"
                        PLabel:
                            text: "0000"


                PLabel:
                    original: "To verify that messages are\nend-to-end encrypted and authenticated, \ncompare these numbers"
                    text: self.original if app.language == 'EN' else app.translate(self.original)

                    text_size: self.width, None
                    halign: "center"
                    adaptive_height: True

                PLabel:
                    id: okay
                    original: "Learn more"
                    text: self.original if app.language == 'EN' else app.translate(self.original)

                    text_color: get_color_from_hex("#3C7290")
