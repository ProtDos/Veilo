                        PLabel:
                            text: "0000"
                        PLabel:
                            text: "0000"

                    PBoxLayout:
                        orientation: "vertical"
                        spacing: 2
                        size_hint_y: .55

                        PLabel:
                            text: "0000"
                        PLabel:
