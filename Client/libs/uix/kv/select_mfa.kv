<SelectMFA>
    MDBoxLayout:
        orientation:'vertical'

        PToolbar:
            original: "Security"
            title: self.original if app.language == 'EN' else app.translate(self.original)
            right_action_items: [["skip_next", lambda x: root.manager.skip_choose_security()]]

        PLabel:
            original: "Choose security grade:"
            text: self.original if app.language == 'EN' else app.translate(self.original)
            font_name: "LexendMedium"
            font_size: dp(15)
            adaptive_height: True
        
        MDBoxLayout:
            size_hint_y:0.4
            padding:10
            spacing:10

