                        rounded_rectangle: (self.x, self.y, self.width, self.height, 20, 20)
                        width: 1


                radius:20
                md_bg_color: root.colorcolor
                padding: 20


                PIconButton2:
                    icon: "checkbox_blank_circle"  # "checkbox_marked_circle
                    mode: "unstyled"


                PLabel:
                    text: "test"


                FitImage:

                    source:"images/calendar.png"

